{
    "compilerOptions": {
      "target": "es2019",
      "module": "commonjs",
      "rootDir": "src",
      "outDir": "build",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "resolveJsonModule": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "build"]
  }
  